<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit post</h3>
    <br>
    <form class="form edit-post" id="eform">
      <input type="hidden" id="blog-id" value="{{blog.id}}" />

      <div class="form-group">
        <label id="post-tit" for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{blog.title}}" />
      </div>
      <br>
      <p></p>
      <div class="form-group">
        <label id="post-cont" for="post-content">Content:</label>
        <textarea style="overflow:auto;resize:none" rows="10" cols="100" class="form-input" id="post-content"
          name="post-content">{{blog.content}}</textarea>
      </div>
      <p></p>
      <div class="form-group">
        <button type="submit" class="btn-update">Update</button>
      </div>
      <p></p>
      <div>
        <button type="submit" class="btn-delete" id="btn-delete">Delete</button>
      </div>
    </form>
  </div>

  <script src="/js/editPost.js"></script>