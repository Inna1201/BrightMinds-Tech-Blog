<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post</h3>
    <br>
    <form class="form new-post" id="nform">
      <div class="form-group">
        <label id="newPost" for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <br>
      <div class="form-group">
        <label id="newPost" for="post-content">Content:</label>
        <textarea style="overflow:auto;resize:none" rows="10" cols="100" class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <br>
      <div class="form-group">
        <button type="submit" class="btn-create">Create</button>
      </div>
    </form>
  </div>

  <script src="/js/newPost.js"></script>